

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

// A generator determines which assets are created when you run the prisma generate command. 
// The main property provider defines which Prisma Client (language specific) is created - currently, only prisma-client-js is available.
// Alternatively you can define any Npm package that follows our generator specification.
// Additionally and optionally you can define a custom output folder for the generated assets with output.
generator client {
  provider = "prisma-client-js"
}

// Models represent the entities of your application domain. 
// Models are represented by model blocks and define a number of fields. 
// In the example data model, User, Profile, Post and Category are models.
model product_model {
  id        Int         @id @default(autoincrement()) 
  Ref       String      @unique
  Product   String?
  Name      String?
  Image	    String?
  Price	    Decimal
  Stock	    Int
  Campus    String?
  Size	    String	
  Color	    String
  Sold	    Int
  UserId    Int         @unique
  User      user_model  @relation(fields: [UserId], references: [id])
  createdAt	DateTime	  @default(now())
  updatedAt DateTime    @updatedAt
}

model user_model {
  id        Int         @id @default(autoincrement()) 
  Username  String      @unique
  Email     String      @unique
  Products   product_model[]
}

